/*菜谱列表*/
.recommend-title {
  margin: 75rpx 0 30rpx 48rpx;
  font-size: 48rpx;
  font-weight: bold;
  color: #353742;
  line-height: 1;
}

.food-list-wrap {
  padding: 40rpx 15rpx 40rpx 15rpx;
}

.food-recommend .food-list-wrap .food-list .food-item {
    flex-shrink: 0;
    padding-bottom:40rpx;
}

.food-recommend .food-list-wrap .food-list .food-item .food-icon {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  z-index: 1;
}
.food-recommend .food-list-wrap .food-list .food-item .food-detail {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
  height: 400rpx;
  line-height: 1.5;
  color: white;
  padding:40rpx 0rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.2);
  border-radius: 16rpx;
  overflow: hidden;
}
.food-recommend .food-list-wrap .food-list .food-item .food-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 16rpx;
    background: linear-gradient(to bottom,rgba(0,0,0,0.5),rgba(0,0,0,0) 60%,rgba(0,0,0,0.5));
    z-index: 2;
}

.food-recommend .food-list-wrap .food-list .food-item .food-title {
    position: relative;
    font-size:40rpx;
    line-height: 1.5;
    z-index: 3;
    overflow: hidden;
    padding:25rpx;
}

.food-recommend .food-list-wrap .food-list .food-item .food-desc {
    position: relative;
    flex-shrink: 0;
    z-index: 3;
    padding-left: 20rpx;
    text-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.5);
}

.food-recommend .food-list-wrap .food-list .food-item .food-desc .item-text {
    font-size: 24rpx;
    font-weight: bold;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 100%;
}
